@using IntelligentTourGuide.Web.Areas.User.ViewModels
@model ShowPlaceViewModel

@{
}

<h1 style="text-align:center">Your Destinations</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StateId" class="control-label"></label>
                <select asp-for="StateId" class="form-control" asp-items="ViewBag.StateId"></select>
            </div>

            <button type="submit" class="btn btn-primary">Get Places</button>
        </form>
    </div>
</div>


@if (Model != null && Model.Places != null)
{
    <form method="post">
        <div class="card-columns mt-3">
            @foreach (var item in Model.Places)
            {
                <div class="card">
                    <div class="card-body">
                        <img class="card-img-top" src="@item.ImageUrl"
                             style="max-height: 300px;">
                        <div class="card-title"> @item.PlaceName </div>
                        <div class="card-text"> @item.Description </div>

                    </div>
                   <!--- <div class="card-footer">
                        <button class="btn btn-sm btn-primary" type="submit"
                                asp-area="User" asp-controller="Home"
                                asp-action="Details" asp-route-id="@item.PlaceId">
                            To know more
                        </button> 
                    </div> -->
                </div>
            }
        </div>
    </form>
}